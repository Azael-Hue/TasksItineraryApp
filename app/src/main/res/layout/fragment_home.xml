<?xml version="1.0" encoding="utf-8"?>

<!-- Linear layout, love to use it -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/frameLayout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Home">

    <!-- The Title -->
    <TextView
        android:id="@+id/homeTitle"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/home_fragment_title"
        android:textAlignment="center"
        android:textSize="34sp" />

    <!-- recycler View that occupies an adapter in the class file to
            help us  populate the recycler with tasks using alongside
            it th etask layout to display each task in a card -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:nestedScrollingEnabled="true" />

</LinearLayout>